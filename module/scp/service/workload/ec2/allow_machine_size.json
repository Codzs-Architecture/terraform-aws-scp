{
    "Sid": "limitedEc2Size",
    "Effect": "Deny",
    "Action": [
      "ec2:RunInstances",
      "cloudwatch:DescribeAlarms"
    ],
    "Resource": [
      "arn:aws:ec2:*:*:instance/*"
    ],
    "Condition": {
      "ForAnyValue:StringNotLike": {
        "ec2:InstanceType": instance_size
      }
    }
  }